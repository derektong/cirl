<tr>
  <th>
    <span class="case_name">
      <%= "#{@case.claimant} v #{@case.respondent}" %>
    </span>
    <span class="case_decision_date">
      <%= "#{@case.decision_date.strftime("%d %b %Y")}" %>
    </span>
    <span class="case_court">
      <%= Court.exists?(@case.court_id) ? Court.find(@case.court_id).name : 
          "Unknown court" %>
      &nbsp;|&nbsp; 
    </span>
  </th>
</tr>
<tr>
  <td>
    <p>
    <span class="case_other_attribute">Legal issues:</span>
    <span class="case_issues">
      <%= @case.issues.map(&:description).join(', ') %>
    </span>
    </p>
    <p>
    <span class="case_other_attribute">Legal subjects:</span>
    <span class="case_subjects">
      <%= @case.subjects.map(&:description).join(', ') %>
    </span><br />
    </p>

  <%= link_to "Download", download_case_path(@case.id) %>
  <%# if current_user.admin? %>
  | <%= link_to "Edit", edit_case_path(@case.id) %>
  | <%= link_to "Delete", @case, :method => :delete, :confirm => "You sure?", 
        :title => "Delete this case?" %>
  <%# end %>
  </td>
</tr>
