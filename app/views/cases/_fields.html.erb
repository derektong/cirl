<%= f.label :claimant, "Name of claimant: " %>
<%= f.text_field :claimant, autofocus: "autofocus" %>
<%= f.label :respondent, "Name of respondent: " %>
<%= f.text_field :respondent %><br />

<%= f.label :decision_date, "Date of decision: " -%>
<%= f.select :day, 1..31, prompt: "day" %>
<%= f.select :month, 1..12, prompt: "month" -%>
<%= f.select :year, 1900..Time.now.year, prompt: "year" -%>

<%= f.label :country_origin, "Claimant's country of origin: " %>
<%= f.select :country_origin, get_countries,
             prompt: "(Select a country)" %><br />

<%= f.label :jurisdiction_id, "Jurisdiction: " %>
<%= collection_select(:case, :jurisdiction_id, @jurisdictions, 
                      :id, :name, prompt: "(Select a jurisdiction)" ) %><br />

<%= f.label :court_id, "Court: " %>
<%= collection_select(:case, :court_id, 
                      @courts,
                      :id, :name,
                      { prompt: "(Select a court)" }, 
                      { disabled: f.object.id.nil? && params[:case] && params[:case][:jurisdiction_id].nil?})%>
                      <br />

<%= f.label :child_topic_ids, "Children's rights framework:" %>
<%= render 'child_topics', object: f.object %>

<%= f.label :refugee_topic_ids, "Refugee framework:" %>
<%= render 'refugee_topics', object: f.object %>

<%= f.label :keyword_ids, "Keywords:" %>
<%= render 'keywords', object: f.object %>

<%= f.label :pdf %>
<%= f.file_field :pdf %>


