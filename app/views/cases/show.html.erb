
<%= provide(:title, "View case") %>
<section class="row">
<%= render 'case_menu' %>
  <div class="basic span9">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

<tr>
  <th>
    <span class="case_name">
      <%= "#{@case.claimant} (#{@case.country_origin}) v #{@case.respondent}" %>
    </span>
    <span class="case_decision_date">
      <%= "#{@case.decision_date.strftime("%d %b %Y")}" %>
    </span>
    <span class="case_court">
      <%= @case.court != nil ? @case.court.name : "Unknown court" %>
        <%#= Court.exists?(@case.court_id) ? Court.find(@case.court_id).name : %>
      &nbsp;|&nbsp; 
    </span>
  </th>
</tr>
<tr>
  <td>
    <p>
    <span class="case_other_attribute">Refugee Framework Topics:</span>
    <span class="case_refugee_topics">
      <%= @case.refugee_topics.map(&:description).join(', ') %>
    </span>
    </p>
    <p>
    <span class="case_other_attribute">Children's Rights Framework Topics:</span>
    <span class="case_child_topics">
      <%= @case.child_topics.map(&:description).join(', ') %>
    </span><br />
    </p>
    <p>
    <span class="case_other_attribute">Keywords:</span>
    <span class="case_keywords">
      <%= @case.keywords.map(&:description).join(', ') %>
    </span><br />
    </p>
    <span class="case_other_attribute">Full text:</span>
    <span class="case_fulltext">
      <%= @case.fulltext %>
    </span><br />
    </p>

  <%= link_to "Download", download_case_path(@case.id) %>
  <%# if current_user.admin? %>
  | <%= link_to "Edit", edit_case_path(@case.id) %>
  | <%= link_to "Delete", @case, :method => :delete, :confirm => "You sure?", 
        :title => "Delete this case?" %>
  <%# end %>
  </td>
</tr>
</div>
</section>
