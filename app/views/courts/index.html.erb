<%= provide(:title, "Manage Courts") %>
<h3>Manage Courts</h3><br />
<%= render 'shared/sidebar' %>
<div class="main">

  <table class="table">
  <% Jurisdiction.find(:all, :order => :name ).each do |jurisdiction|%>
    <tr><th><%= jurisdiction.name %></th></tr>
    <% courts = Court.find_all_by_jurisdiction_id(jurisdiction.id, :order => :name ) %>
    <% if courts.empty? %>  
      <tr><td><span class="tip">No courts in this jurisdiction</span></td></tr>
    <% else %>
      <% courts.each do |court| %>
        <%= render court %>
      <% end %>
    <% end %>
  <% end %>
  </table>

<%= form_for(@court, :html => { :class => "well"} ) do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <h3>Add new court</h3>
  <div class="field">
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %>
    <%= f.label :jurisdiction_id, "Jurisdiction: " %>
    <%= collection_select(:court, :jurisdiction_id, Jurisdiction.all, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit "Add" %>
  </div>
<% end %>
</div>


