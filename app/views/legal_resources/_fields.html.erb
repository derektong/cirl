<div class="control-group">
  <%= f.label :name, "Name of resource: ", class: "control-label" %>
  <div class="controls">
    <%= f.text_field :name %><br />
  </div>
</div>

<div class="control-group">
  <%= f.label :publish_date, "Date of publication: ", class: "control-label" %>
  <div class="controls">
    <%= f.select :day, 1..31, prompt: "day" %>
    <%= f.select :month, 1..12, prompt: "month" %>
    <%= f.select :year, 1900..Time.now.year, prompt: "year" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :publisher_id, "publisher decided in:", class: "control-label" %>
  <div class="controls">
    <%= collection_select(:legal_resource, :publisher_id, @publishers, 
                          :id, :name, prompt: "(Select a publisher)" ) %><br />
  </div>
</div>

<div class="control-group">
  <%= f.label :document_type_id, "document_type: ", class: "control-label" %>
  <div class="controls">
    <%= collection_select(:legal_resource, :document_type_id, @document_types, :id, :name, { prompt: "(Select a document_type)" }, 
        { disabled: f.object.document_type.nil? })%>
        <br />
  </div>
</div>

<div class="control-group">
  <%= f.label :process_topic_ids, "Process/Procedure framework:", class: "control-label"  %>
  <div class="controls">
    <%= render 'process_topics/process_topics', object: f.object %>
  </div>
</div>

<div class="control-group">
  <%= f.label :child_topic_ids, "Children's rights framework:", class: "control-label"  %>
  <div class="controls">
    <%= render 'child_topics/child_topics', object: f.object %>
  </div>
</div>

<div class="control-group">
  <%= f.label :refugee_topic_ids, "Refugee framework:", class: "control-label"  %>
  <div class="controls">
    <%= render 'refugee_topics/refugee_topics', object: f.object %>
  </div>
</div>

<div class="control-group">
  <%= f.label :keyword_ids, "Keywords:", class: "control-label"  %>
  <div class="controls">
    <%= render 'keywords/keywords', object: f.object %>
  </div>
</div>

<div class="control-group">
  <%= f.label :pdf, class: "control-label"  %>
  <div class="controls">
    <%= f.file_field :pdf %>
  </div>
</div>


