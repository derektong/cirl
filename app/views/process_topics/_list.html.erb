<div class="span5 basic">
<% flash.each do |key, value| %>
 <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<h3>Manage Process Definition Topics</h3><br />
<table class="table">
  <% @process_topics.each do |process_topic| %>
    <tr><td><b><%= process_topic.description %></b>
      <%= link_to "edit", edit_process_topic_path(process_topic.id), class: "tip" %>
      <span class="tip"> | </span>
      <%= link_to "delete", process_topic, method: :delete, data: { confirm: "You sure?" }, class: "tip" %>
    </td></tr>
    <% if process_topic.process_links.empty? %>
      <tr><td><span class="tip">No linked keywords for this topic</span></td></tr>
    <% else %>
      <% process_topic.process_links.each do |link| %>
      <tr>
        <td>
          <%= link.keyword.description %>
          <% if link.required then %>
            (Required)
          <% end %>
          <%= link_to "unlink", process_link_path(link.id), method: :delete, data: { confirm: "You sure?" }, class: "tip"  %>
        </td>
      </tr>
      <% end %>
    <% end %>
  <% end %>
</table>
</div>







