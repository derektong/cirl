<fieldset class="checkboxes">
  <table class="checkboxes">
    <tr class="checkboxes">
      <% @i = 1 %>
      <% @refugee_topics.each do |refugee_topic| %>
        <td>
        <label class="checkbox inline">
          <% @type = "" %>
          <% case object.class.to_s %>
            <% when "LegalBrief" %>
            <%   @type = "legal_brief" %>
            <% when "Case" %>
            <%   @type = "case" %>
            <% when "LegalResource" %>
            <%   @type = "legal_resource" %>
          <% end %>
          <%= check_box_tag @type + "[refugee_topic_ids][]", refugee_topic.id, 
              object.refugee_topics.include?(refugee_topic) %>
          <%= refugee_topic.description %>
        </label>
        </td>
        <%= if( @i % 2 == 0 ) then raw "</tr><tr class=\"checkboxes\">" end %>
        <% @i += 1 %>
      <% end %>
    </tr>
  </table>
</fieldset>
