<% if @object != nil %>
  <% if @object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@object.errors.count, "error") %>
        prohibited this <%= get_object_name(@object.type.to_s) %> from being saved:</h2>
      <br />
      <ul>
        <% case @object.type.to_s %>
        <%# Jurisdiction specific errors %>
          <% when "Jurisdiction" %>
          <%# only one error for jurisdictions%>
            <li>Jurisdiction has already been added</li>

          <% else 
               @object.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

