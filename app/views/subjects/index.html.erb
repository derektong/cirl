<%= provide( :title, 'Manage Subjects') %>
<%= javascript_include_tag "subjects" %>
<%= render 'shared/admin_menu' %>
<div class="container">
<h3>Manage Legal Subjects</h3><br />
<div class="main">
  <table class="table">
   <%= render @subjects %>
  </table>
<%= form_for(@subject, :html => { :class => "well" } ) do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <%= f.label :description, "Add new legal subject: " %>
  <%= f.text_field :description %>
  <%= f.submit "Add", :class => "btn" %>
<% end %>
</div>
<div class="sidebar">
Use this page to create, edit and delete the legal subjects in the database.
</div>
</div>
